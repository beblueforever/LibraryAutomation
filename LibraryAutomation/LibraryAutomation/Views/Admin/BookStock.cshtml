@model List<LibraryAutomation.Models.BookStockViewModel>

<h2>Kitap Stok Durumu</h2>

<a asp-action="Dashboard" class="btn btn-secondary mb-3">← Anasayfaya Geri Dön</a>

<form asp-action="BookStock" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" class="form-control mr-2" placeholder="Kitap adı, yazar veya yayın evi ara" value="@Context.Request.Query["searchString"]" />
    <button type="submit" class="btn btn-primary">Ara</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kitap Başlığı</th>
            <th>Yazar</th>
            <th>Yayın Evi</th>
            <th>Stok Adedi</th>
            <th>Mevcut Stok Adedi</th>
            <th>Fiziksel Lokasyonlar</th> <!-- Yeni sütun -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Publisher</td>
                <td>@item.TotalStock</td>
                <td>@item.Available</td>
                <td>
                    @if (item.PhysicalLocations != null && item.PhysicalLocations.Any())
                    {
                        <!-- Lokasyonları virgülle ayırarak göster -->
                        @string.Join(", ", item.PhysicalLocations)
                    }
                    else
                    {
                        <em>Lokasyon bilgisi yok</em>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
